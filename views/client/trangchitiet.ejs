    <script>
        AOS.init();
        const imgList = document.querySelectorAll('#product-noidung img');
        for (let i = 0; i <= imgList.length - 1; i++) {
            let width = imgList[i].clientWidth;
            let widthMax = imgList[i].parentNode.parentNode.clientWidth;
            if (width > widthMax) {
                imgList[i].style.width = '100%';
                imgList[i].style.height = 'auto';
            }
        }

        window.addEventListener("resize", function() {
            let widthScreen = window.innerWidth;
            if (widthScreen < 768) {
                for (let i = 0; i <= imgList.length - 1; i++) {
                    imgList[i].style.width = '100%';
                    imgList[i].style.height = 'auto';
                }
            }
        });
        // $('#product-noidung img').css('width', '100%')
